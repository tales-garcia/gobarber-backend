{
  "compilerOptions": {
    "target": "ES3",
    "module": "commonjs",
    "outDir": "./tmp/javascript",
    "rootDir": "./src",

    "baseUrl": "./",
    "paths": {
      "@modules/*": ["src/modules/*"]
    },
    "esModuleInterop": true,

    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
